!!! 5
%html
  %head
    %title Simple Moodboards | Boarder
    %meta{charset: 'utf-8'}
    %meta{content: 'on', 'http-equiv' => 'cleartype'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{content: 'width=device-width', 'name' => 'viewport'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = favicon_tag 'favicon.ico'

  %body
    %header.toolbar
      = link_to '<span class="app-title-kerning-b">B</span>oarder', '/', class: 'app-title'
      .app-actions.actions
        = link_to 'Upload Board', '#', class: 'button button-upload action-button icon-upload', id: 'upload-button'
        = link_to 'Save Board', '#', class: 'button button-save action-button icon-save', id: 'save-button'
        = link_to 'Add item', '#', class: 'button button-add action-button icon-plus', id: 'add-button'
        %input#file-upload{type: "file"}

    #main.app-main= yield
    = render_partial 'footer'
    = render_partial 'dialogs'

