@import 'nib';

@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700');

html {
  background: white;
  min-height: 100%;
}

body {
  color: #444;
  font: normal 18px/1.5em 'Montserrat';
  text-align: center;
  -webkit-font-smoothing: antialiased;
}


[class*='icon-']:before {
  text-indent: 0;
  position: absolute;
  top: 50%; left: 50%;
  margin: -.5em;
  width: 1em; height: 1em;
  text-align: center;
}

.icon-only {
  display: block;
  position: relative;
  text-indent: -9999px;
  overflow: hidden;
  width: 1em;
  height: 1em;
  line-height: 1em;
}

.icon-delete:before,
.icon-close:before { content: '\00D7' }


.app-container {
  padding: 2em;

  @media screen and (max-width: 600px) {
    padding: 1em 1em 2em;
  }
}

.app-header {
  height: 1.5em;
  margin: 0 0 2em;
}

.button {
  width: 10em;
  margin: 1em auto;
  padding: 0 1em;
  height: 2em;
  font: normal 18px/2em 'Montserrat';
  background: mediumturquoise;
  text-shadow: 0 1px 1px darkturquoise;
  white-space: nowrap;
  text-decoration: none;
  text-overflow: ellipsis;
  overflow: hidden;
  border-bottom: 1px solid darkturquoise;
  color: white;
  border: 0;
  -webkit-font-smoothing: antialiased;
  border-radius: 2px;
  cursor: pointer;

  &:hover {
    background: darkturquoise;
    cursor: pointer;
  }
}

.logo {
  float: left;
  margin: 0;
  font-size: 1.25em;
  text-transform: uppercase;
  letter-spacing: .5em;
}

a {
  color: darkturquoise;
  text-decoration: none;

  &:hover {
    cursor: pointer;
    color: black;
  }
}

.label {
  display: block;
  text-transform: uppercase;
  font-size: .65em;
  color: #666;
}

label {
  @extend .label;
}

.input {
  width: 100%;
  background: white;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-width: 0 0 1px;
  text-align: center;
  font: normal 18px/1.5em 'Montserrat';

  &:focus {
    outline: 0;
    border-color: darkturquoise;
  }
}

input[type='text'], input[type='email'], input[type='password'], textarea {
  @extend .input;
}

textarea {
  resize: vertical;
}

.public {
  .logo {
    font-size: 2em;
    float: none;
    margin: 2em 0;
    text-shadow: .25em -.25em whitesmoke;
  }

  .login-buttons-dropdown-align-right { float: none; }
  .login-link-text, .login-close-text { display: none; }

  .login-form-sign-in, .accounts-dialog {
    max-width: 400px;
    margin: auto;
    border: 0;
    position: static;
  }

  .additional-link-container {
    display: inline-block;
    margin: 0 -.15em;
    ~ .additional-link-container {
      border-left: 1px solid #aaa;
      margin-top: 1em;
    }
  }

  .additional-link {
    padding: 0 .75em;
    font-size: 90%;
    cursor: pointer;

    &:hover {
      color: black;
    }
  }

  .login-button {
    @extends .button;
  }

}


// Boards

.boards {
  clear: both;
  margin: 0;
  padding: 0;
}

.board {
  float: left;
  position: relative;
  list-style: none;
  border: 1px solid darkkhaki;
  background: white;
  font-size: 1em;
  line-height: 2em;
  padding: 0 1em;
  margin: 0 1em 1em 0;
  min-height: 8em;
  min-width: 8em;
  max-width: 24em;
  text-align: left;
  background-color: palegoldenrod;
  background-image: linear-gradient(top, rgba(0,0,0,.15) 0, rgba(0,0,0,.15) 1px, rgba(0,0,0,0) 1px, rgba(0,0,0,0));
  background-position: center -1px;
  background-size: 2em;
  box-sizing: border-box;
}

.new-board-button {
  background: transparent;
  border: 2px dashed;
  position: relative;
  opacity: .5;

  &:before {
    content: 'New board';
    position: absolute;
    top: 50%;
    line-height: 2em;
    margin-top: -1em;
    left: 1em;
    right: 1em;
    text-align: center;
  }

  &:hover {
    opacity: 1;
  }
}

.board-header {

  h1 {
    margin: 0;
    line-height: 2em;
  }
}

.icon-delete, .icon-close {
  color: white;
  position: absolute;
  top: -0.5em;
  right: -0.5em;
  background: darkslategray;
  border-radius: 50%;
  font-size: 1.15em;
  line-height: 1.1em;

  &:hover {
    color: white
    background: dimgrey;
  }
}

.board-content {
  line-height: 2em;
  margin-bottom: 1.35em;
}

.login-button {
  display: block;
  padding: 0 .5em;

  &:hover {
    cursor: pointer;
    color: black;
  }
}

.login-buttons-dropdown-align-right { float: right; }

.login-link-and-dropdown-list {
  position: relative;
}

.dialog, .accounts-dialog {
  background: white;
  border: 1px solid #ddd;
}

.accounts-dialog {
  position: absolute;
  top: 1.5em;
  right: 0;
}

.dialog {
  display: none;
  position: fixed;
  top: 4em;
  left: 50%;
  width: 400px;
  margin-left: -200px;
  z-index: 10;
  padding: 1em;
  box-shadow: 0 0 0 99999px rgba(white, .75);
}

